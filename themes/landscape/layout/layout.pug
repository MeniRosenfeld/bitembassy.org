-
  page_title = page.title || page.category || page.tag

doctype html5

head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  base(href=config.baseurl)

  title= (page_title ? page_title + ' | ' : '') +  config.title

  if page.description || config.description
    meta(name='description' content=page.description || config.description)
  
  if page.web_app
    meta(name="mobile-web-app-capable", content="yes")

  meta(property='og:site_name', content=config.title)

  if page.share_img || config.share_img
    meta(property='og:image', content=full_url_for(page.share_img || config.share_img))

  if config.twitter
    meta(name='twitter:site', content='@'+config.twitter)
  if config.twitter_card_large
    meta(name='twitter:card', content='summary_large_image')

  != css('css/style.css')
  if page.css
    != css('css/' + page.css)

body.home.page.page-id-7.page-template-default
  #page.hfeed.site
    #wrap
      header#masthead.site-header(role='banner')
        include _nav.pug
        //-
          #logo(style='top:80px;')
            a(href='/', title='Bitembassy TLV', rel='home')
              h2.site-title(style='color:#FFFFFF;')
                | Bitcoin emBassy TLV
                br
                span.hebrew שגרירות הביטקוין
              img(style='align:center;', src='img/logo-inverted.png', width='96', height='80')

      #main.site-main
        #primary.content-area
          != body

      footer#colophon.site-footer(role='contentinfo')
        .site-info
          //-
            span(style='font-size:0.75em;')
              | Exchange rate by
              a(href='http://bitcoinaverage.com/', target='blank') BitcoinAverage
            br
          |       Bitcoin emBassy TLV, Since 2013
          span.sep= ' '
          a(href='reach-us.html') Contact us
          br
          small #[a(href = config.github_path + page.source) Edit this page] on GitHub
          br
          a(rel='license', href='http://creativecommons.org/licenses/by-nc/4.0/')
            img(alt='Creative Commons License', style='border-width:0;margin-top:1em;', src='https://i.creativecommons.org/l/by-nc/4.0/88x31.png')
      
    include _partial/mobile-nav

script(src='js/jquery-3.4.1.min.js')
script(src='js/script.js')
